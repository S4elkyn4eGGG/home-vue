@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

body {
  @media screen and (min-width: 640px) {
    .top-menu-container--slide {
      z-index: 1000;
      width: 100%;
      top: 0;
      left: 0;
      position: fixed;
      display: flex;
      justify-content: flex-start;
      box-shadow: var(--top-menu-box-shadow);
      border-bottom: var(--top-menu-border-bottom);
      height: var(--top-menu-height);
      background: var(--top-menu-background);

      .logo {
        width: var(--top-menu-item-width);
        margin: 0 3em;
        display: flex;
        align-items: center;
        justify-content: center;

        img {
          width: 95%;
          height: 95%;
        }
      }

      .burger-icon {
        display: none;
      }

      span {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
      }

      .main-menu {
        height: 100%;
        display: flex;
        flex-flow: nowrap;

        .nav-item {
          overflow: hidden
          width: var(--top-menu-item-width);
          height: 100%;
          border-right: var(--top-menu-item-border-color);
          transition: all 0.3s ease;
          &:nth-child(2) {
            border-left: var(--top-menu-item-border-color);
          }
          &:hover {
            width: var(--top-menu-item-width-hover) !important;
            transition: all 0.3s ease;

            a {
              span {
                display: inline-block;
                animation: fadeIn 1s;
              }

              img {
                display: none;
                animation: fadeIn 1s;
              }
            }
          }
        }

        .link {
          &.router-link-exact-active {
            background: var(--top-menu-item-hover-background);
            color var(--top-menu-item-active-color);
          }

          &:not(.router-link-exact-active):hover {
            background: var(--top-menu-item-active-background);
          }

          &:hover {
            justify-content: flex-start;
          }

          align-items: center;
          justify-content: center;
          display: flex;
          flex-direction: row;
          width: 100%;
          height: 100%;
          text-align: left;
          text-decoration: none;
          font-weight: bold;
          font-family: 'Avenir', Helvetica, Arial, sans-serif;
          -webkit-font-smoothing: antialiased;
          -moz-osx-font-smoothing: grayscale;
          color: var(--top-menu-item-text-color);

          span {
            display: none;
            padding: var(--top-menu-item-text-padding);
          }

          img {
            width: 50%;
            height: 50%;
            display: block;
            animation: fadeIn 2s;
          }
        }
      }
    }
  }

  @media screen and (max-width: 639px) {
    .top-menu-container--slide {
      display: none;
    }
  }
}

