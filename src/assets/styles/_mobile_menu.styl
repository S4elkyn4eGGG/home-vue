@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@media screen and (max-width: 639px) {
  .top-menu-container {
    z-index: 1000;
    width: 90px;
    height: 100%;
    top: 0;
    left: 0;
    position: fixed;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    box-shadow: 0 2px 2px 2px rgba(0,0,0,0.5);
    border-right: 2px solid #42b983;

    .desktop-menu {
      height: 100%;

      .nav-item {
        width: 100%;
        height: 100px;
        border-bottom: 3px solid #42b983;
        transition: all 0.3s ease;
        &:first-child {
          border-top-width: 0;
        }
        &:hover {
          height: 200px;
          transition: all 0.3s ease;

          a {
            span {
              display: inline-block;
              animation: fadeIn 1s;
            }

            img {
              display: none;
              animation: fadeIn 1s;
            }
          }
        }
      }

      .link {
        &.router-link-exact-active {
          background: rgba(0, 185, 74, 0.16);
          color #00b94a;
        }

        &:not(.router-link-exact-active):hover {
          background: rgba(0, 185, 74, 0.04);
        }

        &:hover {
          justify-content: flex-start;
        }

        align-items: center;
        justify-content: center;
        display: flex;
        flex-direction: row;
        width: 100%;
        height: 100%;
        text-align: left;
        text-decoration: none;
        font-weight: bold;
        font-family: 'Avenir', Helvetica, Arial, sans-serif;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
        color: #2c3e50;

        span {
          display: none;
          padding: 20px;
        }

        img {
          width: 50%;
          height: 50%;
          display: block;
          animation: fadeIn 2s;
        }
      }
    }
  }
}
